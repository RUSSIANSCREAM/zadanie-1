using System;

class Program
{
    static void Main()
    {
        int height = 5;

        for (int i = 0; i < height; i++)
        {
            string spaces = new string(' ', height - i - 1); 
            string stars = new string('*', 2 * i + 1);       

            Console.WriteLine(spaces + "/" + stars + "\\");
        }
    }
}
